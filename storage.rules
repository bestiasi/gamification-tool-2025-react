rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload proofs to their own folder
    match /proofs/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.token.email.matches('.*@bestis[.]ro$');
      allow write: if request.auth != null 
                   && request.auth.token.email.matches('.*@bestis[.]ro$')
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');  // Only images
    }
  }
}
